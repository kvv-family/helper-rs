{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "image-helper",
  "version": "0.1.0",
  "identifier": "com.image-helper.dev",
  "build": {
    "frontendDist": "../dist/image-helper/browser",
    "devUrl": "http://localhost:4200",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Домашний помощник",
        "width": 800,
        "height": 600,
        "devtools": true,
        "resizable": false,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
